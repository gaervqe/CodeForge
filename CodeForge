CodeForge
# CodeForge

import os
import json
import logging
from datetime import datetime
import random

logging.basicConfig(level=logging.INFO)
logger = logging.getLogger("CodeForge")

def create_directory(path):
    os.makedirs(path, exist_ok=True)
    logger.info(f"Directory created at: {path}")

def write_to_file(filename, data):
    with open(filename, 'w') as f:
        f.write(data)
    logger.info(f"Data written to file: {filename}")

def read_from_file(filename):
    with open(filename, 'r') as f:
        data = f.read()
    logger.info(f"Data read from file: {filename}")
    return data

def generate_random_data(size):
    return ''.join(random.choices('abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789', k=size))

def save_json(filename, data):
    with open(filename, 'w') as f:
        json.dump(data, f, indent=4)
    logger.info(f"JSON data saved to file: {filename}")

def load_json(filename):
    with open(filename, 'r') as f:
        data = json.load(f)
    logger.info(f"JSON data loaded from file: {filename}")
    return data

def main():
    logger.info("Starting CodeForge...")
    
    directory_path = "./data"
    create_directory(directory_path)
    
    text_filename = os.path.join(directory_path, "sample.txt")
    random_text = generate_random_data(100)
    write_to_file(text_filename, random_text)
    read_text = read_from_file(text_filename)
    logger.info(f"Read text: {read_text}")
    
    json_filename = os.path.join(directory_path, "sample.json")
    sample_data = {
        "timestamp": datetime.now().isoformat(),
        "random_text": random_text,
        "random_number": random.randint(1, 100)
    }
    save_json(json_filename, sample_data)
    loaded_data = load_json(json_filename)
    logger.info(f"Loaded JSON data: {loaded_data}")
    
    logger.info("CodeForge completed.")

if __name__ == "__main__":
    main()
